<Window x:Class="Diagnostics_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diagnostics_Tool"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1200">
    <Grid>
        <ComboBox x:Name="serialPortsBox" HorizontalAlignment="Left" Margin="142,266,0,0" VerticalAlignment="Top" Width="98" Height="30" SelectionChanged="comboBox_SelectionChanged" FontSize="16"/>
        <Label x:Name="serialMonitorLabel" HorizontalContentAlignment="Center" Content="Serial Monitor" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Margin="10,230,0,0" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="serialGoButton" Content="Start" HorizontalAlignment="Left" Margin="10,266,0,0" VerticalAlignment="Top" Width="127" Height="30" Click="serialGoButton_Click" FontSize="16" IsEnabled="False"/>

        <ListBox x:Name="serialView" HorizontalAlignment="Left" Height="553" Margin="10,301,0,0" VerticalAlignment="Top" Width="230" FontSize="13">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Height" Value="25"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="553" Margin="254,301,0,0" VerticalAlignment="Top" Width="922">
            <TabItem Header="Controller"/>
            <TabItem Header="Blah" Height="22" VerticalAlignment="Top"/>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" Margin="0,0,20,0"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
